{
  "name": "pipethrough",
  "version": "0.0.1",
  "description": "Pipes a file through a given docker image and back.",
  "main": "src/index.ts",
  "author": "Simon Knott",
  "license": "MIT",
  "private": true,
  "scripts": {
    "debug": "node -r ts-node/register --inspect src/index.ts",
    "start": "ts-node src/index.ts",
    "test": "yarn jest",
    "test:watch": "yarn test --watch"
  },
  "dependencies": {
    "dockerode": "^2.5.5",
    "express": "^4.16.3",
    "express-wrap-async": "^1.0.3",
    "multer": "^1.3.0",
    "ramda": "^0.25.0",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "devDependencies": {
    "@types/dockerode": "^2.5.4",
    "@types/express": "^4.11.1",
    "@types/jest": "^23.0.0",
    "@types/multer": "^1.3.6",
    "@types/ramda": "^0.25.32",
    "jest": "^23.1.0",
    "ts-jest": "^22.4.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
